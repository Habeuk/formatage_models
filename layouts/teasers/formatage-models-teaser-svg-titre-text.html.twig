{% if content %}
<div{{ attributes.addClass('reinsuranceItem') }}>
	<div class="reinsuranceItem__iconContainer">
		<div class="reinsuranceItem__assistance">
			{% set svg = {
                    '#theme': 'formatage_models__clean_field',
                    '#content_all': content.svg
                } 
            %}
                {{ render_var(svg) }}  
		</div>
	</div>
	{% if content.titre %}
	<div {{ region_attributes.titre.addClass('reinsuranceItem__title') }}>
		{% set titre= {
                    '#theme': 'formatage_models__clean_field',
                    '#content_all': content.titre
                } %}
                	{{ render_var(titre) }}  
		</span>
	</div>
	{% endif %}
	{% if content.body %}
	<div{{ region_attributes.body.addClass('reinsuranceitem__description') }}>
		{{ content.body }}
	</div>
	{% endif %}
</div>
{% endif %}