{% if content %}
    <div{{ attributes.addClass(['service-icone','space-padding']) }}>
        <div class="d-flex ">
            <div {{ region_attributes.icone.addClass(['icone']) }}>
                {% for block in content.icone| layout_raw %}
                        {% for field in block %}
                            {{ field.value|raw }}
                        {% endfor %}
                {% endfor %}                
            </div>
            <div>
                <h4{{ region_attributes.titre.addClass(['titre']) }}>{{ content.titre|layout_value }}</h4>
                <div{{ region_attributes.description.addClass(['description']) }}> {{ content.description|layout_value }} </div>
            </div>
        </div>
    </div>
{% include '@formatage_models/includes/add-region-edit.html.twig' %}
{% endif %}