{% if content %}
	{% set custom_image %}
	{{ content.bgimage }}
	{% endset %}
	<section {{attributes.addClass('page-header-bg')}} style="background-image: url('{{ custom_image|striptags|trim }}'); background-size:{{settings.bg_size}}; background-position:{{settings.bg_position}};">
		{% if content.title %}
			<div class="container">
				<div class="col-md-12">
					{{ content.title }}
				</div>
			</div>
		{% endif %}
	</section>
{% endif %}