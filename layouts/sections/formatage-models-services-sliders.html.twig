{% if content  %}
	<section {{ attributes.addClass(['services-sliders','space-padding']) }}>
		<div {% if settings.config_section %} class="{{ settings.config_section.type_container }} {{ settings.config_section.container_class }}" {% else %} class="container" {% endif %}>
			<div class="row">
				<div class="col-lg-6">
					{% if content.titre %}
						<h1 class="titre">
							{{ content.titre }}
						</h1>
					{% endif %}
					{% if content.sub_title %}
						<h4 class="sub_title">
							{{ content.sub_title }}
						</h4>
					{% endif %}
					{% if content.main %}
						{{ content.main }}
					{% endif %}
				</div>
				<div class="col-lg-6">
					{% if content.bgimage %}
						{% if content.bgimage.layout_builder_add_block %}
							{{ content.bgimage }}
						{% endif %}
						{% set imgUrl %}{{content.bgimage|layout_value}}{% endset %}
						<div class="img-bg" style="background-image: url('{{imgUrl|striptags|trim}}')"></div>
					{% endif %}
				</div>
			</div>
		</div>
	</section>
{% endif %}