{% if content  %}
	<section {{ attributes.addClass(['titre-section','space-padding']) }}>
		<div {% if settings.config_section %} class="{{ settings.config_section.type_container }} {{ settings.config_section.container_class }}" {% else %} class="container" {% endif %}>
			{% if content.main %}
				<h1 {{ region_attributes.main.addClass(['main']) }}>
					{{ content.main|layout_value }}
				</h1>
			{% endif %}
			{% if content.sub_title %}
				<h4{{region_attributes.sub_title.addClass(['sub_title'])}}>
					{{ content.sub_title }}
				</h4>
			{% endif %}
		</div>
	</section>
{% endif %}