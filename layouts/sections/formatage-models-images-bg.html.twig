{% if content  %}
    <section {{ attributes.addClass(['images-bg','space-padding']) }} style="background-image: url('{{settings.bgimage.url}}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h4 class="sub_title">
                        {{ settings.sub_title }}
                    </h4>
                    <h1 class="titre">
                        {{ settings.titre }}
                    </h1>
                    <a href="{{ settings.link }}" class="seeMore">{{ settings.text_url }}</a>
                    {% if content.main %}
                        <div{{ region_attributes.main.addClass(['main']) }}>
                            {% for block in  content.main %}
                                {% if block["#theme"] %}
                                    <div >{{ block }}</div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    {% include '@formatage_models/includes/add-region-edit.html.twig' %}
{% endif %}
