{% if content %}
	{% if content.imagebg.layout_builder_add_block %}
		{{ content.imagebg }}
	{% endif %}
	{% if content.imagebg|layout_bg_img %}
		{% set attributes=attributes.merge(content.imagebg|layout_bg_img) %}
	{% endif %}
	<section {{attributes.addClass('appson-section-handler')}}>
		<div class="container">
			<div class="slider-content d-flex flex-center">
				<div class="col-md-8 col-sm-9 col-xs-12 d-flex flex-center">
					<div class="slider-nner">
						{% if content.title %}
							<{{settings.region_tag_title}} {{region_attributes.title.addClass('title')}}>
								{{content.title}}
							</{{settings.region_tag_title}}>
						{% endif %}
						{% if content.sub_title %}
							<h4 {{region_attributes.sub_title.addClass('sub-title')}}>
								{{content.sub_title}}
							</h4>
						{% endif %}
						<div {{region_attributes.description.addClass('description')}}>
							{{content.description}}
						</div>
						{% if content.call_action %}
							{{content.call_action}}
						{% endif %}
					</div>
				</div>
				<div class="col-md-4 hidden-sm hidden-xs">
					{% if content.image %}
						<div class="slider-m-img">
							{{ content.image }}
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</section>
{% endif %}