{# empty Twig template #}
{% if content %}
    <section{{ attributes.addClass(['fm-hero-thegem-18','align-items-center','d-flex']) }} style="background-image: url('{{settings.infos.fields.bg_image.img_bg.url}}')">
         <div {% if settings.config_section %} class="{{ settings.config_section.type_container }} {{ settings.config_section.container_class }}" {% else %} class="container" {% endif %}>
              <div class="d-flex ">
                   <div class="fm-hero-thegem-18__border"></div>
                   <div class="fm-hero-thegem-18__content">
                        <h1 class="title"> {{ settings.infos.fields.title.text_html.value|raw }} </h1>
                        <div class="desscription">
                             {{ settings.infos.fields.description.text_html.value|raw }}
                        </div>
                   </div>
              </div>
         </div>
    </section>
{% endif %}
