{% if content %}
	<section{{attributes}}>
		<div class="topbar"></div>
		<div class="container topbar-content">
			<div class="row">
				<div class="col-lg-6 d-none d-lg-block">
					<div {{region_attributes.topheader.addClass('topheader')}}>
						{{content.topheader|raw}}
					</div>
				</div>
				<div class="col-lg-6 right">
					<div class="d-flex justify-content-between justify-content-md-end justify-content-end pt-md-2 align-items-center h-100">
					    {% if content.topheader_right %}
						<div {{ region_attributes.topheader_right.addClass('topheader_right') }}>
						    {{ content.topheader_right }}
						</div>
						{% endif %}
						<div class="header_search_1">
							{% if logged_in == true %}
							{% if content.user_compact %}
							<div class="btn-group">
                            	<a href="#" type="button" class="mr-4 dropdown-toggle" title="{{'Profile information'|trans}}" data-toggle="dropdown" aria-expanded="false">
                            		<i class="fas fa-user"></i>
                            	</a>
                            	<div class="dropdown-menu dropdown-menu--user">
                                    {{content.user_compact}}
                                </div>
                        	</div> 
                        	{% else %}
								<a href="/user/logout" id="header-search-button" class="d-flex align-items-baseline">
									<i class="fas fa-sign-out-alt"></i>
								</a>
							{% endif %}
							{% else %}
								<a href="/user/login" id="header-search-button" class="d-flex align-items-baseline">
									<i class="fas fa-sign-in-alt"></i>
									<span class="text">{{ 'Login'|trans }}</span>
								</a>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- -->
		<div class="container">
			<div class="header-nav">
				<div class="row">
					<div class="col-4 col-lg-6 d-flex align-items-center logo-bloc flex-wrap">
						<div class="basic-wrapper">
                            {% if settings.logo_url %}
							<a href="{{settings.front}}" title="Home" rel="home" class="logo">	
									<img src="{{settings.logo_url}}">
							</a>
							{% endif %}
						</div>
						<div class="basic-wrapper-slogan">
							<div {{region_attributes.sitename.addClass('sitename','site-name')}}>
								{{content.sitename}}
							</div>
							<div{{region_attributes.slogan.addclass('slogan','site-slogant')}}>
								{{content.slogan}}
							</div>
						</div>
					</div>
					<div class="col-8 col-lg-6 col-xs-12 content-info justify-content-end d-flex">
						<div class="d-flex flex-wrap data-right align-items-center">
							{{content.data_right}}
							<div class="icon icon-bloc d-flex align-items-center icon-bloc-phone">
								<i class="fas fa-phone"></i>
								<div class="content">
									<span {{region_attributes.phone.addClass('phone')}}>
										{{content.phone}}
									</span>
									<div>
										<a href="#" {{region_attributes.email.addClass('email')}}>
											{{content.email}}
										</a>
									</div>
								</div>
							</div>
							<div class="icon icon-bloc d-none d-md-flex align-items-center icon-bloc-callaction"> 
								<i class="fas fa-bullhorn"></i>
								<div {{region_attributes.call_action.addClass(['content','call_action'])}}>								
									{{content.call_action}}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endif %}